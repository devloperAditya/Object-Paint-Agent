# Object Paint Agent with Grounding DINO object detection (CPU or GPU).
# Requires: PyTorch, GroundingDINO package, and optionally weights in models/groundingdino/.
FROM python:3.11-slim

WORKDIR /app

# System deps: OpenCV + curl + git (for cloning GroundingDINO)
RUN apt-get update && apt-get install -y --no-install-recommends \
    libgl1 \
    libglib2.0-0 \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy project
COPY pyproject.toml ./
COPY app/ ./app/
COPY scripts/ ./scripts/
# pyproject.toml references README.md; create if not in context (e.g. partial clone)
RUN test -f README.md || echo "# Object Paint Agent" > README.md

# Install CPU-only PyTorch first (avoids ~3GB+ CUDA deps and saves disk space on EC2)
RUN pip install --no-cache-dir torch torchvision --index-url https://download.pytorch.org/whl/cpu

# Install app and remaining deps (torch/torchvision already satisfied; use pip so uv doesn't pull CUDA)
RUN pip install --no-cache-dir -e ".[detect]"

# Install GroundingDINO from source (PyTorch must be installed first; CPU build when no CUDA)
RUN git clone --depth 1 https://github.com/IDEA-Research/GroundingDINO.git /tmp/GroundingDINO \
    && pip install -e /tmp/GroundingDINO --no-build-isolation \
    && rm -rf /tmp/GroundingDINO

# Optional: copy weights into image (omit if you mount at runtime)
# COPY models/ ./models/

# Non-root user
RUN useradd -m -u 1000 appuser && chown -R appuser:appuser /app
USER appuser

ENV PORT=7860
EXPOSE 7860

CMD ["sh", "-c", "python -m app.main --host 0.0.0.0 --port ${PORT}"]
